@model CreateCsrRequest
@{
    ViewData["Title"] = "Home Page";
    
}

<div class="row">
   
        <h2>Key Vault Info</h2>
    <form asp-action="CreateCSR" method="post" class="form-horizontal">
        <div class="form-group">
            <label class="control-label col-sm-2" asp-for="VaultName">Vault Name:</label>
            <div class="col-sm-10">
                <input asp-for="VaultName"/>        
            </div>
            
        </div>
        
        <div class="form-group">
            <label class="control-label col-sm-2" asp-for="CertificateName">Certificate Name:</label>
            <div class="col-sm-10">
                <input asp-for="CertificateName"/>       
            </div>
            
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-default">Create CSR</button>       
            </div>
        </div>
        
    </form>

   
</div>
